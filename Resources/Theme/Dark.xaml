<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="SurfaceColor">#FF0F0F10</Color>
    <Color x:Key="SurfaceAltColor">#FF1A1B1D</Color>
    <Color x:Key="TextColor">#FFF6F6F8</Color>
    <Color x:Key="SubtleTextColor">#AAFFFFFF</Color>

    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
    <SolidColorBrush x:Key="SurfaceAltBrush" Color="{StaticResource SurfaceAltColor}" />
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="SubtleTextBrush" Color="{StaticResource SubtleTextColor}" />

    <Style TargetType="Window">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
    </Style>
</ResourceDictionary>
