<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="AccentColor.Amber">#FFE0A106</Color>
    <Color x:Key="AccentColor.Blue">#FF2B74DA</Color>
    <Color x:Key="AccentColor.Crimson">#FFD1345B</Color>
    <Color x:Key="AccentColor.Emerald">#FF2E8B57</Color>

    <SolidColorBrush x:Key="AccentBrush.Amber" Color="{StaticResource AccentColor.Amber}" Opacity="0.92" />
    <SolidColorBrush x:Key="AccentBrush.Blue" Color="{StaticResource AccentColor.Blue}" Opacity="0.92" />
    <SolidColorBrush x:Key="AccentBrush.Crimson" Color="{StaticResource AccentColor.Crimson}" Opacity="0.92" />
    <SolidColorBrush x:Key="AccentBrush.Emerald" Color="{StaticResource AccentColor.Emerald}" Opacity="0.92" />

    <Color x:Key="AccentColor">{StaticResource AccentColor.Blue}</Color>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor.Blue}" Opacity="0.92" />
</ResourceDictionary>
