<Page x:Class="CommonToggleButtonUI.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="400"
      d:DesignWidth="600">
    <StackPanel Margin="16" Orientation="Vertical" Spacing="12">
        <TextBlock Text="Appearance"
                   FontWeight="SemiBold"
                   FontSize="16"
                   Margin="0,0,0,4" />
        <StackPanel Orientation="Vertical" Spacing="4">
            <TextBlock Text="Theme" />
            <ComboBox ItemsSource="{Binding ThemePresets}"
                      SelectedItem="{Binding SelectedTheme, Mode=TwoWay}"
                      MinWidth="180" />
        </StackPanel>
        <StackPanel Orientation="Vertical" Spacing="4">
            <TextBlock Text="Accent color" />
            <ComboBox ItemsSource="{Binding AccentPresets}"
                      SelectedItem="{Binding SelectedAccent, Mode=TwoWay}"
                      MinWidth="180" />
        </StackPanel>
        <TextBlock Text="Changes apply instantly using lightweight resource swaps to avoid layout thrashing." 
                   TextWrapping="Wrap"
                   Foreground="{DynamicResource SubtleTextBrush}" />
    </StackPanel>
</Page>
