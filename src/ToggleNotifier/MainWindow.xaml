<Window x:Class="ToggleNotifier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Common Toggle Button UI"
        Width="420"
        Height="320"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Configure the indicator overlays and startup behavior."
                   FontSize="16"
                   FontWeight="SemiBold"
                   Margin="0,0,0,12"
                   TextWrapping="Wrap"
                   AutomationProperties.Name="App description" />

        <StackPanel Grid.Row="1" VerticalAlignment="Top">
            <CheckBox x:Name="LaunchOnSignInBox"
                      Content="Launch automatically when I sign in"
                      AutomationProperties.Name="Launch on sign in"
                      IsChecked="True"
                      Margin="0,0,0,10" />

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Width="170" Text="Horizontal offset (px):"
                           VerticalAlignment="Center" />
                <TextBox x:Name="HorizontalOffsetBox" Width="80" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Width="170" Text="Vertical offset (px):"
                           VerticalAlignment="Center" />
                <TextBox x:Name="VerticalOffsetBox" Width="80" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Width="170" Text="Toast dismiss (ms):"
                           VerticalAlignment="Center" />
                <TextBox x:Name="DismissBox" Width="80" />
            </StackPanel>

            <Border BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                    BorderThickness="1"
                    Padding="10"
                    CornerRadius="6"
                    Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                <TextBlock Text="Overlays avoid taking focus and respect high-contrast colors automatically."
                           TextWrapping="Wrap"
                           AutomationProperties.Name="Accessibility note" />
            </Border>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="SaveButton"
                    Width="120"
                    Content="Save and hide"
                    AutomationProperties.Name="Save settings"
                    Click="OnSave"
                    Margin="0,0,8,0" />
            <Button Width="100"
                    Content="Close"
                    AutomationProperties.Name="Close window"
                    Click="OnClose" />
        </StackPanel>
    </Grid>
</Window>
