<Window x:Class="ToggleNotifier.Notifications.ToastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        ShowActivated="False"
        ResizeMode="NoResize"
        Topmost="True"
        Focusable="False"
        Background="Transparent"
        Opacity="0"
        Width="300"
        Height="100">
    <Border x:Name="Container"
            Margin="8"
            Padding="16,12"
            CornerRadius="8"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="4" BlurRadius="16" Opacity="0.25" Direction="270" />
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Key Glyph with background circle -->
            <Border Grid.Column="0" 
                    x:Name="GlyphContainer"
                    Width="48" Height="48" 
                    CornerRadius="24"
                    VerticalAlignment="Center">
                <TextBlock x:Name="Glyph"
                           Text="&#x21EA;"
                           FontSize="22"
                           FontFamily="Segoe UI Symbol"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           AutomationProperties.Name="Key state glyph" />
            </Border>
            
            <!-- Key Name and State -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="14,0,0,0">
                <TextBlock x:Name="TitleBlock"
                           Text="Caps Lock"
                           FontWeight="SemiBold"
                           FontSize="15"
                           FontFamily="Segoe UI Variable Display, Segoe UI"
                           AutomationProperties.Name="Key name" />
                <TextBlock x:Name="StateBlock"
                           Text="On"
                           Margin="0,2,0,0"
                           FontSize="13"
                           FontFamily="Segoe UI Variable Text, Segoe UI"
                           Opacity="0.8"
                           AutomationProperties.Name="Key state" />
            </StackPanel>
            
            <!-- State Indicator -->
            <Border Grid.Column="2" 
                    x:Name="StateIndicator"
                    Width="12" Height="12" 
                    CornerRadius="6"
                    VerticalAlignment="Center"
                    Margin="8,0,0,0"/>
        </Grid>
    </Border>
</Window>
