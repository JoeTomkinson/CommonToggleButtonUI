<Window x:Class="ToggleNotifier.Notifications.CompactToastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        ShowActivated="False"
        ResizeMode="NoResize"
        Topmost="True"
        Focusable="False"
        Background="Transparent"
        Opacity="0"
        Width="64"
        Height="64"
        SizeToContent="WidthAndHeight">
    <Border x:Name="Container"
            Margin="6"
            Padding="10"
            CornerRadius="12"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="2" BlurRadius="12" Opacity="0.2" Direction="270" />
        </Border.Effect>
        <Grid>
            <!-- Key Glyph with status indicator overlay -->
            <Border x:Name="GlyphContainer"
                    Width="40" Height="40" 
                    CornerRadius="20"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <TextBlock x:Name="Glyph"
                           Text="&#x21EA;"
                           FontSize="18"
                           FontFamily="Segoe UI Symbol"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           AutomationProperties.Name="Key state glyph" />
            </Border>
            
            <!-- Status Indicator Dot (positioned at bottom-right of glyph) -->
            <Border x:Name="StateIndicator"
                    Width="12" Height="12" 
                    CornerRadius="6"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Margin="0,0,-2,-2"
                    BorderThickness="2">
                <Border.BorderBrush>
                    <SolidColorBrush x:Name="IndicatorBorderBrush" Color="White"/>
                </Border.BorderBrush>
            </Border>
        </Grid>
    </Border>
</Window>
