<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DropShadowEffect x:Key="ToastShadowEffect"
                      Color="#33000000"
                      BlurRadius="18"
                      ShadowDepth="0"
                      Direction="270"
                      Opacity="0.75"
                      RenderingBias="Performance" />

    <Style x:Key="ToastOverlayStyle" TargetType="ContentControl">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <Grid CacheMode="BitmapCache">
                        <Border CornerRadius="12"
                                Background="Transparent"
                                Effect="{StaticResource ToastShadowEffect}" />

                        <Border CornerRadius="12"
                                Background="{DynamicResource SurfaceAltBrush}"
                                Opacity="0.55">
                            <Border.Effect>
                                <BlurEffect Radius="8" KernelType="Gaussian" RenderingBias="Performance" />
                            </Border.Effect>
                        </Border>

                        <Border CornerRadius="12"
                                Padding="14"
                                Background="{DynamicResource AccentBrush}"
                                Opacity="0.94"
                                BorderBrush="#33FFFFFF"
                                BorderThickness="1">
                            <ContentPresenter />
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
