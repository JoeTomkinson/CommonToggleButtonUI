<Window x:Class="ToggleIndicatorUI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:ToggleIndicatorUI.Models"
        Title="Settings" Height="450" Width="420"
        WindowStartupLocation="CenterOwner">
    <ScrollViewer Padding="12">
        <StackPanel Orientation="Vertical" Spacing="14">
            <TextBlock Text="Indicators" FontSize="18" FontWeight="SemiBold"/>
            <StackPanel Orientation="Vertical" Spacing="6">
                <CheckBox Content="Caps Lock" IsChecked="{Binding Settings.CapsLockEnabled}"/>
                <CheckBox Content="Num Lock" IsChecked="{Binding Settings.NumLockEnabled}"/>
                <CheckBox Content="Scroll Lock" IsChecked="{Binding Settings.ScrollLockEnabled}"/>
            </StackPanel>

            <Separator/>
            <TextBlock Text="Theme" FontSize="18" FontWeight="SemiBold"/>
            <ComboBox ItemsSource="{Binding ThemeNames}" SelectedItem="{Binding Settings.SelectedTheme}"/>

            <Separator/>
            <TextBlock Text="Indicator Appearance" FontSize="18" FontWeight="SemiBold"/>
            <StackPanel Orientation="Vertical" Spacing="6">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Size" Width="80" VerticalAlignment="Center"/>
                    <Slider Minimum="16" Maximum="64" Value="{Binding Settings.IndicatorSize}" Width="200"/>
                    <TextBlock Text="{Binding Settings.IndicatorSize, StringFormat=F0}" Width="40"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Opacity" Width="80" VerticalAlignment="Center"/>
                    <Slider Minimum="0.3" Maximum="1" Value="{Binding Settings.IndicatorOpacity}" Width="200"/>
                    <TextBlock Text="{Binding Settings.IndicatorOpacity, StringFormat=F2}" Width="40"/>
                </StackPanel>
            </StackPanel>

            <Separator/>
            <TextBlock Text="Position" FontSize="18" FontWeight="SemiBold"/>
            <StackPanel Orientation="Vertical" Spacing="6">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Corner" Width="80" VerticalAlignment="Center"/>
                    <ComboBox ItemsSource="{Binding CornerOptions}" SelectedItem="{Binding Settings.Corner}" Width="160"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Offset X" Width="80" VerticalAlignment="Center"/>
                    <Slider Minimum="0" Maximum="200" Value="{Binding Settings.OffsetX}" Width="200"/>
                    <TextBlock Text="{Binding Settings.OffsetX, StringFormat=F0}" Width="40"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Offset Y" Width="80" VerticalAlignment="Center"/>
                    <Slider Minimum="0" Maximum="200" Value="{Binding Settings.OffsetY}" Width="200"/>
                    <TextBlock Text="{Binding Settings.OffsetY, StringFormat=F0}" Width="40"/>
                </StackPanel>
            </StackPanel>

            <Separator/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                <Button Content="Close" Width="90" Click="Close_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
