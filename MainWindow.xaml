<Window x:Class="CommonToggleButtonUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:CommonToggleButtonUI.Views"
        mc:Ignorable="d"
        Title="Common Toggle Button UI"
        Height="450"
        Width="800"
        Background="{DynamicResource SurfaceBrush}">
    <Grid Padding="16" ColumnSpacing="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <Border Background="{DynamicResource SurfaceAltBrush}" CornerRadius="12" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Top">
                    <TextBlock Text="Toast overlay preview" FontWeight="SemiBold" />
                    <Button Content="Show toast" Click="OnShowToast"/>
                </StackPanel>

                <ContentControl x:Name="ToastOverlay"
                                Grid.Row="1"
                                Style="{StaticResource ToastOverlayStyle}"
                                Visibility="Collapsed"
                                HorizontalAlignment="Left"
                                Width="280"
                                Margin="0,16,0,0">
                    <StackPanel Orientation="Vertical" Spacing="8">
                        <TextBlock Text="Silent mode enabled"
                                   FontWeight="SemiBold"
                                   FontSize="14" />
                        <TextBlock Text="This toast uses the accent palette and lightweight blur/shadow for a fluent look without heavy composition costs."
                                   TextWrapping="Wrap"
                                   Foreground="{DynamicResource SubtleTextBrush}" />
                    </StackPanel>
                </ContentControl>
            </Grid>
        </Border>

        <views:SettingsPage Grid.Column="1" DataContext="{Binding}" />
    </Grid>
</Window>
